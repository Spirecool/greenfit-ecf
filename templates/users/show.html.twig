{% extends 'base.html.twig' %}

{% block title %}Technicien{% endblock %}

{% block body %}
    <h1>{{ user.firstname }} {{ user.lastname }} (Technicien)</h1>

    <table class="table">
        <tbody>
          
            <tr>
                <th>Adresse Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Nom du technicien</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom du technicien</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Addresse</th>
                <td>{{ user.address }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ user.zipcode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.city }}</td>
            </tr>
        </tbody>
    </table>

<div>
    <button class="btn modify-button mt-4"><a href="{{ path('app_users_edit', {'id': user.id}) }}">Modifier</a></button>
</div>
<div class="pt-4">
    <i class="fa-solid fa-circle-arrow-left pl-3"></i>
    <a href="{{ path('app_users_index') }}">Revenir à la liste</a>
</div>

