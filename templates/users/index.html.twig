{% extends 'base.html.twig' %}

{% block title %}Liste de tous les utilisateurs{% endblock %}

{% block body %}
 <script type="text/javascript" src="{{ asset('js/darkmode2.js') }}"></script>
    <h1 class="my-5">Liste des <span class="heading-color">Techniciens</span></h1>


    {# <div>
        <div class="search pb-5">
            <i id="icon" class="fas fa-search icon"></i> 
            <input id='searchid'></input>
        </div>
    </div> #}
    
<div class="table-responsive-xl mt-5 ">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adresse Email</th>
                <th>Rôles</th>
                <th>Nom du technicien</th>
                <th>Prénom du technicien</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Voir</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users%}
            <tr class=" d-none{{ user.getRolesUsers() == ('["ROLE_ADMIN"]') ? : '' }}" >
            {# <tr class=" d-none{{ user.getRolesUsers() == ('["ROLE_ADMIN"]') ? 'myStyle' : '' }}"   id="blue" > #}
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.getRolesUsers()  }}</td>
                {# <td>{{ user.getRolesUsers()   ? user.getRolesUsers() : '' }}</td> #}
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.address }}</td>
                <td>{{ user.zipcode }}</td>
                <td>{{ user.city }}</td>
                {# <td>
                    <a href="{{ path('app_users_show', {'id': user.id}) }}">Voir</a>
                    <a href="{{ path('app_users_edit', {'id': user.id}) }}">Modifier</a>
                </td> #}
                <td class="text-center">
                    <a href="{{ path('app_users_show', {'id': user.id}) }}"<i class="fa-solid fa-eye blue"></i> </a>
                </td>
                <td class="text-center">
                    <a href="{{ path('app_users_edit', {'id': user.id}) }}"><i class="fa-solid fa-pen purple"></i></a>
                </td>
                <td class="text-center">
                    <a href="{{ path('app_users_delete', {'id': user.id}) }}"><i class="fa-solid fa-trash-can red"></i></a>
                    </td>
                </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<div class="my-5">
    <a href="{{ path('app_users_new') }}"><i class="fa-solid fa-plus green"></i> Créer un nouveau technicien</a>
</div>
     <script type="text/javascript" src="{{ asset('js/admin.js') }}"></script>
{% endblock %}
