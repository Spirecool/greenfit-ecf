{% extends 'base.html.twig' %}

{% block title %}Fiche partenaire {% endblock %}

{% block body %}
    <h1>Fiche Partenaire : {{ partner.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Est actif</th>
                <td>{{ partner.isActive ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Modules</th>
                <td>
                    {% if partner.Modules %}
                    {% for module in partner.Modules %}
                    {{module}}<br>
                    {% endfor %}
                    {% endif %}
                </td>
            </tr>    
        </tbody>
    </table>

    <div>
        <button class="btn modify-button mt-4"><a href="{{ path('app_partners_edit', {'id': partner.id}) }}">Modifier</a></button>
    </div>
    <div class="pt-4">
        <i class="fa-solid fa-circle-arrow-left pl-3"></i>
        <a href="{{ path('app_partners_index') }}">Revenir à la liste</a>
    </div>

