                            <div class="card-title pb-4">
                                <h3>Structure : {{structure.name}}</h3>
                            </div>
                            <div class="card-text mb-1">
                                <a href={{path('app_structures_show', {id: structure.id})}} class="login-button">Accédez à {{structure.name}}</a><br>
                            </div>
                        </div>
                    </div>
                </div>

            {% endfor %}
        {% endif %}
    </div>      
