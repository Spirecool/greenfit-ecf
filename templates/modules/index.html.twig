{% extends 'base.html.twig' %}

{% block title %}Liste des Modules{% endblock %}

{% block body %}
    <h1 class="py-5">Liste des Modules</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Est activé par défaut</th>
                 <th>Voir</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for module in modules %}
            <tr>
                <td>{{ module.id }}</td>
                <td>{{ module.name }}</td>
                <td>{{ module.description }}</td>
                <td>{{ module.isDefault ? 'Oui' : 'Non' }}</td>
                {# <td>
                    <a href="{{ path('app_modules_show', {'id': module.id}) }}">Voir</a>
                    <a href="{{ path('app_modules_edit', {'id': module.id}) }}">Modifier</a>
                </td> #}
                <td class="text-center">
                    <a href="{{ path('app_modules_show', {'id': module.id}) }}"<i class="fa-solid fa-eye blue"></i> </a>
                </td>
                <td class="text-center">
                    <a href="{{ path('app_modules_edit', {'id': module.id}) }}"><i class="fa-solid fa-pen purple"></i></a>
                </td>
                <td class="text-center">
                    <a href="{{ path('app_modules_delete', {'id': module.id}) }}"><i class="fa-solid fa-trash-can red"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a href="{{ path('app_modules_new') }}"><i class="fa-solid fa-plus green"></i> Créer un nouveau module</a>

{% endblock %}
